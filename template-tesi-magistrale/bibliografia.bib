@Misc{Hou2022,
	author={Hou, Zhenyu and Liu, Xiao and Cen, Yukuo and Dong, Yuxiao and Yang, Hongxia and Wang, Chunjie and Tang, Jie},
	title={GraphMAE: Self-Supervised Masked Graph Autoencoders},
	year={2022},
