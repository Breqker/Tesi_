@Misc{Wu2021,
	author={Wu, Jiancan and Wang, Xiang and Feng, Fuli and He, Xiangnan and Chen, Liang and Lian, Jianxun and Xie, Xing},
	title={Self-supervised Graph Learning for Recommendation},
